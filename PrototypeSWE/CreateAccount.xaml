<Window x:Class="PrototypeSWE.CreateAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrototypeSWE"
        mc:Ignorable="d"
        Title="CreateAccount" Height="637.713" Width="872.398" FontSize="14" Background="White">
    <Grid HorizontalAlignment="Left" Height="549" Margin="43,30,0,0" VerticalAlignment="Top" Width="819" RenderTransformOrigin="0.5,0.5"  Background="#B3E5FC">
        <Grid.RowDefinitions>
            <RowDefinition Height="321*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="170*"/>
        </Grid.RowDefinitions>
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.533"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Label Content="UserName *" HorizontalAlignment="Left" Margin="34,31,0,0" VerticalAlignment="Top" Height="40" Width="147"/>
        <TextBox Name="txtUser" HorizontalAlignment="Left" Height="34" Margin="34,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="309"  AutomationProperties.IsRequiredForForm="True"  />
        <Label Content="Password *" HorizontalAlignment="Left" Margin="34,128,0,0" VerticalAlignment="Top" Height="29" Width="77" FontSize="16"/>
        <PasswordBox Name="txtpass" HorizontalAlignment="Left" Margin="34,162,0,0" VerticalAlignment="Top" Width="309" Height="37" AutomationProperties.IsRequiredForForm="True"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="207,76,0,0" VerticalAlignment="Top" Width="136" Background="#0288D1" Click="Button_Click" RenderTransformOrigin="0.607,2.698" Grid.Row="2" Height="23"/>
        <Label x:Name="ExistUser" Content="" HorizontalAlignment="Left" Margin="135,100,0,0" VerticalAlignment="Top" Width="116" Height="29"/>
        <Label Content="Confirm Password *" HorizontalAlignment="Left" Margin="34,225,0,0" VerticalAlignment="Top" Height="29" Width="167" FontSize="16"/>
        <Label x:Name="incorrect" Content="" HorizontalAlignment="Left" Margin="34,290,0,0" VerticalAlignment="Top" Width="277" Height="29"/>
        <PasswordBox x:Name="confirmPass" HorizontalAlignment="Left" Margin="34,254,0,0" VerticalAlignment="Top" Width="309" AutomationProperties.IsRequiredForForm="True" Height="31"/>
        <Label Content="Security Question: Name of your favorite color" HorizontalAlignment="Left" Height="34" Margin="34,319,0,0" VerticalAlignment="Top" Width="416" FontSize="18" Grid.RowSpan="2"/>
        <TextBox x:Name="seqAns" HorizontalAlignment="Left" Height="47" Margin="34,0,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="325" AutomationProperties.IsRequiredForForm="True" TextChanged="TextBox_TextChanged"/>

    </Grid>
</Window>
