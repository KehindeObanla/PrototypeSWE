<Window x:Class="PrototypeSWE.CreateAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrototypeSWE"
        mc:Ignorable="d"
        Title="CreateAccount" Height="696.591" Width="1015.389" FontSize="14" Background="White">
    <Grid HorizontalAlignment="Left" Margin="43,30,0,19" Width="892" RenderTransformOrigin="0.5,0.5"  Background="#B3E5FC">
        <Grid.RowDefinitions>
            <RowDefinition Height="321*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="170*"/>
        </Grid.RowDefinitions>
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.533"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Label Content="UserName *" HorizontalAlignment="Left" Margin="22,55,0,0" VerticalAlignment="Top" Height="40" Width="147" FontSize="18"/>
        <TextBox Name="txtUser" HorizontalAlignment="Left" Height="34" Margin="215,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="309"  AutomationProperties.IsRequiredForForm="True"  />
        <Label Content="Password *" HorizontalAlignment="Left" Margin="22,133,0,0" VerticalAlignment="Top" Height="29" Width="116" FontSize="18"/>
        <PasswordBox Name="txtpass" HorizontalAlignment="Left" Margin="215,133,0,0" VerticalAlignment="Top" Width="309" Height="37" AutomationProperties.IsRequiredForForm="True">
            <PasswordBox.ToolTip>
                <StackPanel>
                    <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,5">At Least</TextBlock>
                    <TextBlock>
                        -  1 lowercase letter
                        <LineBreak />
                        -  1 upperCase letter
                        <LineBreak />
                        - 1 Speacial Character
                        <LineBreak />

                    </TextBlock>

                </StackPanel>
            </PasswordBox.ToolTip>
        </PasswordBox>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="328,10,0,0" VerticalAlignment="Top" Width="185" Background="#0288D1" Click="Button_Click" RenderTransformOrigin="0.607,2.698" Grid.Row="1" Height="41" FontSize="18"/>
        <Label x:Name="ExistUser" Content="" HorizontalAlignment="Left" Margin="499,50,0,0" VerticalAlignment="Top" Width="328" Height="34"/>
        <Label Content="Confirm Password *" HorizontalAlignment="Left" Margin="14,217,0,0" VerticalAlignment="Top" Height="29" Width="167" FontSize="18"/>
        <Label x:Name="incorrect" Content="" HorizontalAlignment="Left" Margin="34,290,0,0" VerticalAlignment="Top" Width="277" Height="29"/>
        <PasswordBox x:Name="confirmPass" HorizontalAlignment="Left" Margin="215,209,0,0" VerticalAlignment="Top" Width="309" AutomationProperties.IsRequiredForForm="True" Height="37"/>
        <Label Content="Security Question: &#xD;&#xA; favorite color*" HorizontalAlignment="Left" Height="77" Margin="22,285,0,0" VerticalAlignment="Top" Width="419" FontSize="20"/>
        <TextBox x:Name="seqAns" HorizontalAlignment="Left" Height="41" Margin="215,285,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="309" AutomationProperties.IsRequiredForForm="True"/>
        <Label x:Name="PassFormat" Content="" HorizontalAlignment="Left" Height="37" Margin="512,194,0,0" VerticalAlignment="Top" Width="315"/>

    </Grid>
</Window>
